<!DOCTYPE html>
<html>
<head> 
  <title>EventBrite THP - Forgot your password ?</title>
</head>
<body>
  <!-- Jumbotron -->
  <div class="card card-image rounded-0" style="background-color: #a4508b; background-image: linear-gradient(326deg, #a4508b 0%, #5f0a87 74%);">
    <div class="text-white text-center rgba-stylish-strong py-0 px-4">
    
      <div class="py-0">

        <!-- Content -->
        <h2 class="card-title h2 my-4 py-2">Forgot your password ?</h2>
        
      </div>
    </div>
  </div>
  <!-- Jumbotron -->

  <%= devise_error_messages! %>

  <!-- version proposee par THP et adaptee -->
  <div class="container">
    <div class="row">
      <div class="col-md-6 offset-md-3">
        <br><br><br>
        <%= form_for resource, as: resource_name, url: password_path(resource_name), html: { class: "form-signin mt-3" } do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <!-- champ pour email -->
          <div class="form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          <small id="passwordHelpBlock" class="form-text text-muted">
            You will receive an email with instructions to reset your password. Relax! &#127796;
          </small>
          </div>
          <!-- champ pour bouton de validation -->
          <div class="actions mt-5">
            <%= f.submit "Reset my password", class: "btn btn-lg btn-primary btn-block" %>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</body>
</html>











