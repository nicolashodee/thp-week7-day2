<!-- Jumbotron -->
<div class="card card-image rounded-0" style="background-color: #29539b; background-image: linear-gradient(315deg, #29539b 0%, #1e3b70 74%);">
  <div class="text-white text-center rgba-stylish-strong py-0 px-4">
  
    <div class="py-0">

      <!-- Content -->
      <h2 class="card-title h2 my-4 py-2">Edit your settings, <%= current_user.first_name %>.</h2>
      
    </div>
  </div>
</div>
<!-- Jumbotron -->

<% flash.each do |type, msg| %>
  <div class="<%= flash_class(type) %> mt-1 py-1"><%= msg %></div>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <br><br><br>
      <%= form_for @user, html: { class: "form-signin mt-3" } do |f| %>

        <div class="form-group">
          <%= f.label :email, "Email" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :password %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
          <% if @minimum_password_length %>
            <small id="passwordHelpBlock" class="form-text text-muted">
              <i>(leave blank if you dont want to change it)</i></br>
              <em><%= @minimum_password_length %> characters minimum</em> &#127817;
            </small>
          <% end %><br />
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :current_password %><br />
          <%= f.password_field :current_password, autocomplete: "current-password",  class: "form-control" %>
          <small id="passwordHelpBlock" class="form-text text-muted">
            <i>we need your current password to confirm your changes</i> &#128017;
          </small>
        </div>
        <div class="actions mt-5">
          <%= f.submit "Update", class: "btn btn-lg btn-primary btn-block" %>
        </div>
        </br>
        <%= link_to "Back", :back, class: "btn btn-lg btn-secondary btn-block" %>
        </br>
        </br>
        </br>
      <% end %>
      

      <div class="card">
        <div class="card-header">
          <h3>Cancel my account</h3>
        </div>
        <div class="card-body">
        <%= link_to "delete", current_user, method: :delete, data: { confirm: "Are you sure"} %>
         
        </div>
      </div>

    </div>
  </div>
</div>


